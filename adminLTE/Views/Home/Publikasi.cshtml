@model editPublikasi
@{
    ViewData["Title"] = "Publikasi";
    Layout = "~/Views/Shared/_MainMenu.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        PUBLIKASI ORMAWA
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">Publikasi</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <!-- /.box -->


            <div>
                <form asp-controller="Home" asp-action="Publikasi" method="post">
                    <div class="box">
                        <div class="box-header">

                            <!-- tools box -->
                            <div class="pull-right box-tools">
                                <button type="button" class="btn btn-default btn-sm" data-widget="collapse" data-toggle="tooltip"
                                        title="Collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-default btn-sm" data-widget="remove" data-toggle="tooltip"
                                        title="Remove">
                                    <i class="fa fa-times"></i>
                                </button>
                            </div>
                            <!-- /. tools -->
                        </div>
                        <!-- /.box-header -->

                        <div class="editor-title">
                            <input asp-for="Title" placeholder="Title"
                                   style="width: 100%; height: 50px; font-size: 24px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" />

                        </div>

                        <div>
                        <input asp-for="Body" placeholder="Title"
                               style="width: 100%; height: 100px; font-size: 18px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" />

                    </div>





                        <input type="submit" value="Post" />
               </form>
                </div>
            </div>
        </div>
        <!-- /.col-->
    </div>
    <!-- ./row -->
</section>
<!-- /.content -->
<!-- /.content-wrapper -->
